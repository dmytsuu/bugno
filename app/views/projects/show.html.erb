<%= turbo_stream_from @project %>
<div class="slider">
  <% Event.statuses.each_key do |status| %>
    <section class="section bg-gray-100 rounded-lg" id=<%= "#{status}_events" %>>
      <%= turbo_frame_tag "#{status}_events_page_1", src: events_path(project_id: @project.id, status: status, page: 1) do %>
        <% 6.times do %>
          <div class="rounded-md my-3 bg-gray-200 py-1 px-2 w-full event-container"></div>
        <% end %>
      <% end %>
    </section>
  <% end %>
</div>
