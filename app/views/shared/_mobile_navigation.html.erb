<%= label_tag :projects, class: 'fixed h-14 bottom-8 right-8 z-20 flex container-label' do %>
  <div class="rounded-full bg-gray-100 shadow w-14 p-2 cursor-pointer">
    <%= image_tag 'logo.svg' %>
  </div>
<% end %>
<%= check_box_tag :projects, :projects, false, class: 'hidden container-checkbox' %>
<div class="fixed inset-0 bg-white z-10 navigation flex flex-col justify-between text-center container-content overflow-y-auto">
  <div>
    <%= render 'shared/management' if @project %>
    <%= turbo_frame_tag 'projects', loading: :lazy, src: mobile_projects_path %>
    <%= link_to 'Exit', destroy_user_session_path, class: 'py-2 text-white block md:inline-block px-4 bg-red-400 hover:bg-red-500 rounded mt-2' %>
  </div>
</div>
